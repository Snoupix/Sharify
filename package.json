{
  "name": "sharify",
  "author": "Snoupix",
  "description": "Sharify is a webapp to manage music together in your party",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-s \"build:*\"",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "dev": "remix build && run-p \"dev:*\"",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "remix dev -c 'node ./server.js'",
    "generate:css": "npx tailwindcss -i ./app/styles/tailwind.css -o ./app/compiled.css",
    "start": "cross-env NODE_ENV=production node ./server.js",
    "cyp:open": "cypress open",
    "cyp:run": "cypress run",
    "_deprecated_dev:node": "cross-env NODE_ENV=development nodemon ./server.js --watch ./server.js"
  },
  "dependencies": {
    "@remix-run/express": "^1.19.3",
    "@remix-run/node": "^1.19.3",
    "@remix-run/react": "^1.19.3",
    "@remix-run/v1-meta": "^0.1.3",
    "@remix-run/v1-route-convention": "^0.1.4",
    "@types/spotify-web-api-node": "^5.0.11",
    "@types/websocket": "^1.0.10",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "framer-motion": "^7.10.3",
    "isbot": "^3.8.0",
    "morgan": "^1.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-toastify": "^9.1.3",
    "spotify-web-api-node": "^5.0.2",
    "websocket": "^1.0.34"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.19.3",
    "@remix-run/eslint-config": "^1.19.3",
    "@spotify/web-api-ts-sdk": "^1.2.0",
    "@types/express": "^4.17.21",
    "@types/gapi": "^0.0.43",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "cypress": "^12.17.4",
    "eslint": "^8.56.0",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=14"
  }
}
