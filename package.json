{
  "author": "Snoupix",
  "description": "Sharify is a webapp to manage music together in your party",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-s \"build:*\"",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "dev": "remix build && run-p \"dev:*\"",
    "dev:css": "npm run generate:css -- --watch",
    "dev:node": "cross-env NODE_ENV=development nodemon ./server.js --watch ./server.js",
    "dev:remix": "remix watch",
    "generate:css": "npx tailwindcss -i ./app/styles/tailwind.css -o ./app/compiled.css",
    "start": "cross-env NODE_ENV=production node ./server.js",
    "cyp:open": "cypress open",
    "cyp:run": "cypress run"
  },
  "dependencies": {
    "@remix-run/express": "^1.7.4",
    "@remix-run/node": "^1.7.4",
    "@remix-run/react": "^1.7.4",
    "@types/spotify-web-api-node": "^5.0.7",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "framer-motion": "^7.6.2",
    "isbot": "^3.5.4",
    "morgan": "^1.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-toastify": "^9.0.8",
    "spotify-web-api-node": "^5.0.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.4",
    "@remix-run/eslint-config": "^1.7.4",
    "@types/express": "^4.17.14",
    "@types/gapi": "^0.0.43",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "cypress": "^12.3.0",
    "eslint": "^8.23.1",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.2.1",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=14"
  }
}
